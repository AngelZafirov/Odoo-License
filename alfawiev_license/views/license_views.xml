<odoo>
    <!-- Menü Hauptpunkt -->
    <menuitem id="menu_license_root"
              name="Licenses"
              sequence="10"/>

    <!-- Submenü: Lizenzen -->
    <menuitem id="menu_license_licenses"
              name="Software Licenses"
              parent="menu_license_root"
              action="action_license_license"
              sequence="10"/>

    <!-- Action zur Anzeige -->
    <record id="action_license_license" model="ir.actions.act_window">
        <field name="name">Licenses</field>
        <field name="res_model">license.license</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree-Ansicht -->
    <record id="view_license_license_tree" model="ir.ui.view">
        <field name="name">license.license.tree</field>
        <field name="model">license.license</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="product_id"/>
                <field name="customer_id"/>
                <field name="license_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form-Ansicht -->
    <record id="view_license_license_form" model="ir.ui.view">
        <field name="name">license.license.form</field>
        <field name="model">license.license</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="customer_id"/>
                        <field name="license_type"/>
                        <field name="max_users"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
