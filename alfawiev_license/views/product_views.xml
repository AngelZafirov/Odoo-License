<odoo>
    <record id="view_product_form" model="ir.ui.view">
        <field name="name">license.product.form</field>
        <field name="model">license.product</field>
        <field name="arch" type="xml">
            <form string="Product">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="version"/>
                        <field name="features"/>
                        <field name="license_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_tree" model="ir.ui.view">
        <field name="name">license.product.tree</field>
        <field name="model">license.product</field>
        <field name="arch" type="xml">
            <tree string="Products">
                <field name="name"/>
                <field name="version"/>
                <field name="license_type"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_license_root" name="Licenses"/>
    <menuitem id="menu_license_products" name="Products" parent="menu_license_root" action="action_license_product"/>

    <record id="action_license_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">license.product</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
