<odoo>
    <record id="view_license_form" model="ir.ui.view">
        <field name="name">license.license.form</field>
        <field name="model">license.license</field>
        <field name="arch" type="xml">
            <form string="License">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="customer_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="max_users"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_license_tree" model="ir.ui.view">
        <field name="name">license.license.tree</field>
        <field name="model">license.license</field>
        <field name="arch" type="xml">
            <tree string="Licenses">
                <field name="name"/>
                <field name="product_id"/>
                <field name="customer_id"/>
                <field name="end_date"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_license_licenses" name="Licenses" parent="menu_license_root" action="action_license_license"/>

    <record id="action_license_license" model="ir.actions.act_window">
        <field name="name">Licenses</field>
        <field name="res_model">license.license</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
