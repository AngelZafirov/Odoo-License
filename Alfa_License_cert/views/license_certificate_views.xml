<odoo>
    <menuitem id="menu_license_root" name="License Management" sequence="10"/>
    <menuitem id="menu_license_certificates" name="Certificates"
              parent="menu_license_root" action="action_license_certificate"/>

    <record id="view_license_certificate_form" model="ir.ui.view">
        <field name="name">license.certificate.form</field>
        <field name="model">license.certificate</field>
        <field name="arch" type="xml">
            <form string="License Certificate">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="file" filename="name"/>
                        <field name="valid" readonly="1"/>
                        <field name="reason" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_license_certificate_tree" model="ir.ui.view">
        <field name="name">license.certificate.tree</field>
        <field name="model">license.certificate</field>
        <field name="arch" type="xml">
            <tree string="Certificates">
                <field name="name"/>
                <field name="valid"/>
                <field name="reason"/>
            </tree>
        </field>
    </record>

    <record id="action_license_certificate" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">license.certificate</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
